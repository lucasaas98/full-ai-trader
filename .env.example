# Environment Configuration for Automated Trading System
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SERVICE_NAME=trading_system

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_system
DB_USER=trader
DB_PASSWORD=your_secure_db_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here
REDIS_MAX_CONNECTIONS=20

# =============================================================================
# ALPACA TRADING API
# =============================================================================
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets
ALPACA_PAPER_TRADING=true

# =============================================================================
# TWELVE DATA API
# =============================================================================
TWELVE_DATA_API_KEY=your_twelvedata_api_key_here
TWELVE_DATA_BASE_URL=https://api.twelvedata.com
TWELVE_DATA_RATE_LIMIT=800
TWELVE_DATA_RATE_PERIOD=60
TWELVE_DATA_TIMEOUT=30

# =============================================================================
# FINVIZ CONFIGURATION
# =============================================================================
FINVIZ_API_KEY=your_finviz_api_key_here
FINVIZ_BASE_URL=https://finviz.com
FINVIZ_TIMEOUT=30
FINVIZ_RATE_LIMIT_DELAY=1.0

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
GOTIFY_URL=http://your-gotify-server:8080
GOTIFY_TOKEN=your_gotify_token_here

# Slack notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email notifications (optional)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=trading-system@yourdomain.com
EMAIL_TO=trader1@example.com,trader2@example.com

# =============================================================================
# RISK MANAGEMENT PARAMETERS
# =============================================================================
RISK_MAX_POSITION_SIZE=0.05
RISK_MAX_PORTFOLIO_RISK=0.02
RISK_MAX_CORRELATION=0.7
RISK_STOP_LOSS_PCT=0.02
RISK_TAKE_PROFIT_PCT=0.06
RISK_MAX_DAILY_TRADES=10
RISK_MIN_TRADE_AMOUNT=100
RISK_MAX_TRADE_AMOUNT=10000
RISK_DRAWDOWN_LIMIT=0.15

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=data/logs/trading_system.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================
SCHEDULER_MARKET_DATA_INTERVAL=60
SCHEDULER_FINVIZ_SCAN_INTERVAL=3600
SCHEDULER_STRATEGY_INTERVAL=300
SCHEDULER_RISK_CHECK_INTERVAL=60
SCHEDULER_PORTFOLIO_SYNC_INTERVAL=300
SCHEDULER_HEALTH_CHECK_INTERVAL=60

# Trading hours (24-hour format)
TRADING_START_TIME=09:30
TRADING_END_TIME=16:00
TRADING_TIMEZONE=America/New_York
TRADE_WEEKENDS=false
TRADE_HOLIDAYS=false

# =============================================================================
# DATA MANAGEMENT
# =============================================================================
DATA_PARQUET_PATH=data/parquet
DATA_RETENTION_DAYS=365
DATA_COMPRESSION=snappy
DATA_BATCH_SIZE=1000
PRIMARY_DATA_SOURCE=twelvedata
FALLBACK_DATA_SOURCES=alpaca

# =============================================================================
# API RATE LIMITING
# =============================================================================
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_PERIOD=60

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# =============================================================================
# SERVICE PORTS (for development)
# =============================================================================
DATA_COLLECTOR_PORT=8001
STRATEGY_ENGINE_PORT=8002
RISK_MANAGER_PORT=8003
TRADE_EXECUTOR_PORT=8004
SCHEDULER_PORT=8005
DASHBOARD_PORT=8080
