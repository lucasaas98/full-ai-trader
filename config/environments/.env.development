# Development Environment Configuration
# This file contains default values for development environment
# Copy to .env and customize as needed

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
TESTING=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_system_dev
DB_USER=trader_dev
DB_PASSWORD=dev_password_change_me
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Database URLs for different purposes
DATABASE_URL=postgresql://trader_dev:dev_password_change_me@localhost:5432/trading_system_dev
TEST_DATABASE_URL=postgresql://trader_dev:dev_password_change_me@localhost:5432/trading_system_test

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECTION_TIMEOUT=10

# Redis URLs
REDIS_URL=redis://:dev_redis_password@localhost:6379/0
CELERY_BROKER_URL=redis://:dev_redis_password@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:dev_redis_password@localhost:6379/2

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================
# Trading APIs (Use paper trading for development)
ALPACA_API_KEY=your_alpaca_paper_api_key
ALPACA_SECRET_KEY=your_alpaca_paper_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Market Data APIs
TWELVE_DATA_API_KEY=your_twelve_data_api_key
FINVIZ_API_KEY=your_finviz_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=dev_jwt_secret_key_change_me_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption keys
ENCRYPTION_KEY=dev_encryption_key_32_chars_long
BACKUP_ENCRYPTION_KEY=dev_backup_encryption_key_32_chars
EXPORT_ENCRYPTION_KEY=dev_export_encryption_key_32_chars

# API Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=50

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Risk Management
RISK_MAX_POSITION_SIZE=0.10
RISK_MAX_PORTFOLIO_RISK=0.05
RISK_DRAWDOWN_LIMIT=0.20
RISK_VAR_CONFIDENCE=0.95
RISK_CORRELATION_THRESHOLD=0.7

# Trading Settings
TRADING_DRY_RUN=true
TRADING_PAPER_MODE=true
TRADING_MAX_ORDERS_PER_DAY=50
TRADING_MIN_ORDER_VALUE=100
TRADING_MAX_ORDER_VALUE=10000

# Strategy Parameters
STRATEGY_LOOKBACK_DAYS=30
STRATEGY_REBALANCE_FREQUENCY=daily
STRATEGY_MIN_CONFIDENCE=0.6

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================
SCHEDULER_MARKET_DATA_INTERVAL=60
SCHEDULER_STRATEGY_INTERVAL=300
SCHEDULER_RISK_CHECK_INTERVAL=30
SCHEDULER_PORTFOLIO_UPDATE_INTERVAL=120
SCHEDULER_BACKUP_INTERVAL=86400
SCHEDULER_CLEANUP_INTERVAL=3600

# Market Hours (Eastern Time)
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=30
MARKET_CLOSE_HOUR=16
MARKET_CLOSE_MINUTE=0

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================
# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_DAYS=7

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=dev_grafana_password
GRAFANA_ROOT_URL=http://localhost:3000

# Alerting
GOTIFY_URL=http://localhost:8080
GOTIFY_TOKEN=your_gotify_token
SLACK_WEBHOOK_URL=your_slack_webhook_url
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=alerts@trading-system.local
EMAIL_PASSWORD=email_password
ALERT_EMAIL_TO=admin@trading-system.local

# Error tracking
SENTRY_DSN=your_sentry_dsn_for_development

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=gzip
BACKUP_ENCRYPTION_ENABLED=true

# Local backup paths
BACKUP_ROOT=./backups
DATA_ROOT=./data
LOG_ROOT=./logs

# Cloud backup (optional for development)
S3_BACKUP_BUCKET=trading-system-dev-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================
EXPORT_FORMAT=json,csv,parquet
EXPORT_COMPRESSION=gzip
EXPORT_RETENTION_DAYS=30
TRADENOTE_EXPORT_ENABLED=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FORMAT=structured
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/trading_system.log
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_BACKUP_COUNT=5

# Audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=./logs/audit.log
AUDIT_LOG_RETENTION_DAYS=90

# =============================================================================
# SERVICE PORTS
# =============================================================================
DATA_COLLECTOR_PORT=8001
STRATEGY_ENGINE_PORT=8002
RISK_MANAGER_PORT=8003
TRADE_EXECUTOR_PORT=8004
SCHEDULER_PORT=8005
EXPORT_SERVICE_PORT=8006
MAINTENANCE_SERVICE_PORT=8007

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Worker processes
WORKER_PROCESSES=2
WORKER_THREADS=4
WORKER_TIMEOUT=30

# Connection pools
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
REDIS_POOL_SIZE=10

# Cache settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_BACKTESTING=true
FEATURE_PAPER_TRADING=true
FEATURE_LIVE_TRADING=false
FEATURE_AI_STRATEGIES=true
FEATURE_SOCIAL_SENTIMENT=false
FEATURE_OPTIONS_TRADING=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable development features
DEV_RELOAD=true
DEV_CORS_ENABLED=true
DEV_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
DEV_API_DOCS_ENABLED=true
DEV_PROFILING_ENABLED=false

# Testing configuration
TEST_DATA_ENABLED=true
TEST_FIXTURES_PATH=./tests/fixtures
MOCK_EXTERNAL_APIS=true

# =============================================================================
# MAINTENANCE SETTINGS
# =============================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance for development updates
MAINTENANCE_BYPASS_TOKEN=dev_bypass_token_123

# Graceful shutdown timeout
SHUTDOWN_TIMEOUT=30

# Health check intervals
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# DATA PATHS
# =============================================================================
DATA_PARQUET_PATH=./data/parquet
DATA_LOGS_PATH=./data/logs
DATA_EXPORTS_PATH=./data/exports
DATA_BACKUPS_PATH=./data/backups
DATA_TEMP_PATH=./data/temp

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
IMAGE_TAG=dev
COMPOSE_PROJECT_NAME=trading_system_dev
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Volume mount paths
POSTGRES_DATA_PATH=./data/postgres
REDIS_DATA_PATH=./data/redis
PROMETHEUS_DATA_PATH=./data/prometheus
GRAFANA_DATA_PATH=./data/grafana

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
NOTIFICATIONS_ENABLED=true
NOTIFICATION_CHANNELS=console,file
NOTIFICATION_LEVEL=INFO

# Development notification settings
DEV_NOTIFICATIONS_SLACK=false
DEV_NOTIFICATIONS_EMAIL=false
DEV_NOTIFICATIONS_CONSOLE=true
